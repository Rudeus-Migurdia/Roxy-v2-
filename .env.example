# LLM
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password

# Context
CONTEXT_MAX_TOKENS=120000
CONTEXT_TARGET_TOKENS=80000
DEFAULT_MAX_TOOL_CALLS=30
EMBEDDING_MODEL=text-embedding-3-small

# ASR
ASR_BACKEND=whisper_api
ASR_MODEL=
AUDIO_DIR=/tmp/nakari/audio

# TTS
TTS_BACKEND=edge_tts
TTS_VOICE=
TTS_SPEED=1.0
TTS_PLAYER=mpv
## For GPT-SOVITS
TTS_GPTSOV_URL=http://localhost:9880
TTS_GPTSOV_REF_AUDIO=
TTS_GPTSOV_REF_TEXT=
TTS_GPTSOV_REF_LANG=zh
GPTSOV_IMAGE=rvcboss/gpt-sovits:latest
GPTSOV_GPU_TYPE=nvidia
GPTSOV_GPU_COUNT=all
GPTSOV_IS_HALF=False

## websearch
TAVILY_API_KEY=your-tavily-api-key

# Timers
TIMER_DB_PATH=~/.nakari/timers.db
TIMER_CHECK_INTERVAL_SECONDS=10

# Logging
LOG_LEVEL=INFO